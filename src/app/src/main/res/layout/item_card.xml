<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:elevation="3dp"
    card_view:cardCornerRadius="@dimen/card_item_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_image_height"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/thumbnail"
            android:paddingLeft="@dimen/item_title_padding"
            android:paddingRight="@dimen/item_title_padding"
            android:paddingTop="@dimen/item_title_padding"
            android:textColor="@color/item_title"
            android:textSize="@dimen/item_title" />

        <TextView
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:paddingBottom="@dimen/item_cost_padding_bottom"
            android:paddingLeft="@dimen/item_title_padding"
            android:paddingRight="@dimen/item_title_padding"
            android:textSize="@dimen/item_cost" />

        <ImageView
            android:id="@+id/overflow"
            android:layout_width="@dimen/ic_item_overflow_width"
            android:layout_height="@dimen/ic_item_overflow_height"
            android:layout_alignParentRight="true"
            android:layout_below="@id/thumbnail"
            android:layout_marginTop="@dimen/ic_item_overflow_margin_top"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_dots" />

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>